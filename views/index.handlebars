<h1>Eat Da Burger!</h1>
<img id="burgerpng" src="./assets/img/BurgerChef.png"></img>

<div class="row"></div>

<div class="col-sm-6">
<h2>Burgers to eat!</h2>

  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="col-sm-6">
<h2>Burgers devoured!</h2>
  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
      {{/if}}
    {{/each}}
  </ul>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">New or eaten?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> not eaten
  </div>

  <button type="submit">Add Burger</button>
</form>
